<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yy.dubbo.dao.UserDao">
    <select id="findUser" resultType="com.yy.dubbo.pojo.User">
          SELECT * from user_info
    </select>

    <update id="updateCodeById">
        UPDATE user_info set code = '1' where id = #{id}
    </update>

    <select id="selectById">
        SELECT * from user_info WHERE id = #{id}
    </select>

    <update id="updateUser" parameterType="com.yy.dubbo.pojo.User">
          UPDATE user_info 
          <set>
              <if test="username != null and username !='' ">
                  username = #{username},
              </if>
              <if test="password != null and password !='' ">
                  password = #{password},
              </if>
              <if test="interest != null and interest !='' ">
                  interest = #{interest},
              </if>
              <if test="phone != null and phone !='' ">
                  phone = #{phone},
              </if>
              <if test="email != null and email !='' ">
                  email = #{email},
              </if>
              <if test="age != null and age !='' ">
                  age = #{age},
              </if>
              <if test="mark != null and mark !='' ">
                  mark = #{mark},
              </if>
              <if test="sexly != null and sexly !='' ">
                  sexly = #{sexly},
              </if>
              <if test="code != null and code !='' ">
                  code = #{code},
              </if>
              <if test="create_date != null and create_date !='' ">
                  create_date = #{create_date},
              </if>
              <if test="modify_date != null and modify_date !='' ">
                  modify_date = #{modify_date},
              </if>
          </set>
        WHERE id = #{id}
    </update>
    <insert id="insertUser" parameterType="com.yy.dubbo.pojo.User">
        INSERT INTO user_info (username,password,interest,phone,email,age,mark,sexly,code,create_date,modify_date)
        VALUES (#{username},#{password},#{interest},#{phone},#{email},#{age},#{mark},#{sexly},#{code},#{create_date},#{modify_date})
    </insert>

    <delete id="deleteUser">
        DELETE FROM user_info WHERE id = #{id}
    </delete>

</mapper>